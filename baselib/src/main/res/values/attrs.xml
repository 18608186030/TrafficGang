<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="root_id" type="id" />
    <declare-styleable name="StateView">
        <attr name="emptyResource" format="reference" />
        <attr name="retryResource" format="reference" />
        <attr name="loadingResource" format="reference" />
    </declare-styleable>

    <declare-styleable name="MaterialHeader">
        <attr name="mhPrimaryColor" format="color" />
        <attr name="mhShadowColor" format="color" />
        <attr name="mhShadowRadius" format="dimension" />
        <attr name="mhShowBezierWave" format="boolean" />
    </declare-styleable>

    <style name="itemStyle">
        <item name="android:padding">15dp</item>
        <item name="android:drawableRight">@mipmap/ic_into</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/gray2</item>
    </style>
</resources>